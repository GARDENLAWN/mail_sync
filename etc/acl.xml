<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="GardenLawn_MailSync::root" title="Mail Sync" sortOrder="50">
                    <resource id="GardenLawn_MailSync::message" title="Messages" sortOrder="10"/>
                    <resource id="GardenLawn_MailSync::config" title="Configuration" sortOrder="20"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="GardenLawn_MailSync::config_section" title="Mail Sync Configuration" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
